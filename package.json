{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "simple chat",
  "scripts": {
    "start": "npm run build && node ./server.js",
    "dev": "cross-env NODE_ENV=development npm run build && webpack serve",
    "build": "webpack",
    "test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts'",
    "testtwo": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"CommonJS\" }' mocha --require ts-node/register --require ./mochaSetup.js src/**/**/*.test.ts",
    "prepare": "husky install",
    "eslint": "./node_modules/.bin/eslint --fix",
    "stylelint": "npx stylelint '**/*.css' --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run stylelint"
    }
  },
  "author": "Konstantin",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars": "1.0.9",
    "@babel/core": "7.21.0",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.21.0",
    "@types/chai": "4.3.4",
    "@types/jsdom": "21.1.0",
    "@types/mocha": "10.0.1",
    "@types/node": "18.13.0",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "@typescript-eslint/parser": "5.52.0",
    "chai": "4.3.7",
    "copy-webpack-plugin": "11.0.0",
    "core-js": "3.29.0",
    "cross-env": "7.0.3",
    "css-loader": "6.7.3",
    "css-minimizer-webpack-plugin": "4.2.2",
    "eslint": "8.34.0",
    "eslint-config-airbnb": "19.0.4",
    "favicons": "7.1.1",
    "favicons-webpack-plugin": "6.0.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.3",
    "jsdom": "21.1.0",
    "mini-css-extract-plugin": "2.7.3",
    "mocha": "10.2.0",
    "postcss": "8",
    "postcss-import": "15.1.0",
    "postcss-loader": "7.0.2",
    "postcss-modules": "4.3.1",
    "postcss-nested": "6.0.0",
    "postcss-simple-vars": "7.0.1",
    "sinon": "15.0.1",
    "stylelint": "15.1.0",
    "stylelint-config-standard-scss": "7.0.1",
    "stylelint-scss": "4.4.0",
    "ts-loader": "9.4.2",
    "ts-mocha": "10.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "webpack": "5.76.1",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  },
  "dependencies": {
    "babel-core": "6.26.3",
    "express": "4.18.2",
    "express-handlebars": "6.0.7",
    "express-history-api-fallback": "2.2.1",
    "handlebars": "4.7.7",
    "nanoid": "4.0.1",
    "sinon": "15.0.1"
  },
  "staticFiles": {
    "staticPath": "assets",
    "distDir": "dist"
  }
}
